import React, { useState, useEffect } from "react";
import { SafeAreaView, StyleSheet, TextInput, Text, View, TouchableOpacity, Image, Animated } from "react-native";

const App = () => {
  const [searchText, setSearchText] = useState("");
  const [progress] = useState(new Animated.Value(0));

  const handleNotificationPress = () => {
    alert("Notifikasi ditekan!");
  };

  const handleReviewPress = () => {
    alert("Review ditekan!");
  };

  useEffect(() => {
    Animated.timing(progress, {
      toValue: 0.55, // Set progress menjadi 55%
      duration: 1000, // Durasi animasi dalam milidetik
      useNativeDriver: false,
    }).start();
  }, []);

  const progressInterpolation = progress.interpolate({
    inputRange: [0, 1],
    outputRange: ["0%", "100%"],
  });

  return (
    <SafeAreaView style={styles.container}>
      <View style={styles.headerContainer}>
        {/* Search Bar */}
        <TextInput
          style={styles.input}
          placeholder="Masukkan kata pencarian"
          value={searchText}
          onChangeText={(text) => setSearchText(text)}
        />

        {/* Icon Notifikasi */}
        <TouchableOpacity onPress={handleNotificationPress}>
          <Image
            source={{
              uri: "https://img.icons8.com/ios-filled/50/000000/appointment-reminders.png",
            }}
            style={styles.notificationIcon}
          />
        </TouchableOpacity>
      </View>

      {/* Kartu progress */}
      <View style={styles.cardContainer}>
        <Text style={styles.greetingText}>
          Hi, <Text style={styles.nameText}>Fakhri</Text>
        </Text>
        <Text style={styles.subText}>Gimana proses skripsi mu?</Text>

        {/* Progress Bar dan Gambar dengan Border Bersama */}
        <View style={styles.progressBarWrapper}>
          <View style={styles.progressContainer}>
            {/* Icon Skripsi */}
            <Image
              source={{
                uri: "https://img.freepik.com/free-vector/computer-performance-boost-rocket-fast-data-transmission-power-measure-dial-with-pointer-scale-with-arrow-response-time-indicator-vector-isolated-concept-metaphor-illustration_335657-1993.jpg",
              }}
              style={styles.skripsiIcon}
            />
            <View style={styles.textWrapper}>
              <Text style={styles.progressText}>55% Skripsi Telah Dikerjakan</Text>

              {/* Progress Bar */}
              <View style={styles.progressBarBackground}>
                <Animated.View
                  style={[styles.progressBar, { width: progressInterpolation }]}
                />
              </View>
            </View>
          </View>
        </View>
      </View>

      {/* Tombol Bimbingan, Janji Temu, dan Review */}
      <View style={styles.buttonContainer}>
        <TouchableOpacity style={styles.button}>
          <View style={styles.buttonIcon}>
            <Text style={styles.buttonIconText}>üí¨</Text>
          </View>
          <Text style={styles.buttonText}>Bimbingan</Text>
        </TouchableOpacity>

        <TouchableOpacity style={styles.button}>
          <View style={styles.buttonIcon}>
            <Text style={styles.buttonIconText}>üóìÔ∏è‚ûï</Text>
          </View>
          <Text style={styles.buttonText}>Janji Temu</Text>
        </TouchableOpacity>

        <TouchableOpacity style={styles.button} onPress={handleReviewPress}>
          <View style={styles.buttonIcon}>
            <Text style={styles.buttonIconText}>üìù‚ûï</Text>
          </View>
          <Text style={styles.buttonText}>Review</Text>
        </TouchableOpacity>
      </View>

      {/* Bagian Review */}
      <View style={styles.reviewContainer}>
        <Text style={styles.reviewHeader}>Review Masuk</Text>
        <Text style={styles.reviewText}>Dari Joko, S.Kom., M.T.</Text>
        <Text style={styles.reviewMessage}>
          Anda memiliki 3 notifikasi baru! Bimbingan Anda dijadwalkan besok. Janji temu dengan dosen telah dikonfirmasi. Tugas baru telah ditambahkan.
        </Text>
      </View>

      {/* Navbar dengan Gambar di bawah */}
      <View style={styles.navbar}>
        <TouchableOpacity style={styles.navButton}>
          <Image source={{ uri: "https://img.icons8.com/ios-filled/50/000000/home.png" }} style={styles.navIcon} />
          <Text style={styles.navButtonText}>Home</Text>
        </TouchableOpacity>
        <TouchableOpacity style={styles.navButton}>
          <Image source={{ uri: "https://img.icons8.com/ios-filled/50/000000/more.png" }} style={styles.navIcon} />
          <Text style={styles.navButtonText}>Lainnya</Text>
        </TouchableOpacity>
        <TouchableOpacity style={styles.navButton}>
          <Image source={{ uri: "https://img.icons8.com/ios-filled/50/000000/university.png" }} style={styles.navIcon} />
          <Text style={styles.navButtonText}>Akademik</Text>
        </TouchableOpacity>
        <TouchableOpacity style={styles.navButton}>
        <Image source={{ uri: "https://img.icons8.com/ios-filled/50/000000/message.png" }} style={styles.navIcon} />
          <Text style={styles.navButtonText}>Pesan</Text>
        </TouchableOpacity>
        <TouchableOpacity style={styles.navButton}>
          <Image source={{ uri: "https://img.icons8.com/ios-filled/50/000000/user.png" }} style={styles.navIcon} />
          <Text style={styles.navButtonText}>Akun</Text>
        </TouchableOpacity>
      </View>
    </SafeAreaView>
  );
};

